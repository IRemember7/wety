/* 底部详情样式 */
.kb-info-ctn{
    position: fixed;
    z-index: 1000;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 500rpx;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
    background: #73b4ef;
    font-size: 11pt;
    transition: all .2s cubic-bezier(0.19, 1, 0.22, 1);
    transform: translate3d(0,400rpx,0);
}
.kb-info-ctn-open{
    transform: translate3d(0,0,0);
}
.kb-info-title{
    color: #fff;
    height: 100rpx;
    width: 100%;
    display: flex;
    align-items: center;
}
